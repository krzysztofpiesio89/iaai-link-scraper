{
  "title": "IAAI Auction Crawler",
  "description": "Extract auction links from IAAI (Insurance Auto Auctions) website with advanced pagination handling",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Start URLs",
      "type": "array",
      "description": "URLs to start crawling from",
      "prefill": [
        { "url": "https://www.iaai.com/Search?queryFilterValue=Buy%20Now&queryFilterGroup=AuctionType" }
      ],
      "editor": "requestListSources"
    },
    "maxRequestsPerCrawl": {
      "title": "Max requests per crawl",
      "type": "integer",
      "description": "Maximum number of pages to crawl",
      "minimum": 1,
      "maximum": 100000,
      "editor": "number",
      "prefill": 1000
    },
    "maxPages": {
      "title": "Max pages to crawl",
      "type": "integer",
      "description": "Maximum number of search result pages to process",
      "minimum": 1,
      "maximum": 10000,
      "editor": "number",
      "prefill": 50
    },
    "maxConcurrency": {
      "title": "Max concurrency",
      "type": "integer",
      "description": "Number of concurrent browser instances (recommended: 1-3)",
      "minimum": 1,
      "maximum": 20,
      "editor": "number",
      "prefill": 1
    },
    "proxyConfiguration": {
      "title": "Proxy configuration",
      "type": "object",
      "description": "Proxy settings for avoiding blocks",
      "editor": "proxy",
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      }
    },
    "headless": {
      "title": "Headless browser",
      "type": "boolean",
      "description": "Run browser in headless mode (recommended for production)",
      "editor": "checkbox",
      "prefill": true
    },
    "debugMode": {
      "title": "Debug mode",
      "type": "boolean",
      "description": "Enable detailed logging for debugging",
      "editor": "checkbox",
      "prefill": false
    },
    "includePaths": {
      "title": "Include URL patterns",
      "type": "array",
      "description": "Only crawl URLs matching these patterns (optional)",
      "items": { "type": "string" },
      "editor": "stringList"
    },
    "excludePaths": {
      "title": "Exclude URL patterns",
      "type": "array",
      "description": "Skip URLs matching these patterns (optional)",
      "items": { "type": "string" },
      "editor": "stringList"
    },
    "clickSelector": {
      "title": "Click selector",
      "type": "string",
      "description": "CSS selector to click before extracting data (optional)",
      "editor": "textfield"
    }
  },
  "required": ["startUrls"]
}
